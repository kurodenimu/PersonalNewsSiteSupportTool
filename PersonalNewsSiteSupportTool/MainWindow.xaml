<Window x:Class="PersonalNewsSiteSupportTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalNewsSiteSupportTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Visibility="Visible" WindowState="Minimized">
    <Grid HorizontalAlignment="Left" Height="382" Margin="23,10,0,0" VerticalAlignment="Top" Width="738">
        <TextBox x:Name="textbox1" HorizontalAlignment="Left" Height="227" Margin="10,84,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="708" AcceptsReturn="True"/>
        <ComboBox x:Name="combobox1" ItemsSource="{Binding Categories}"  SelectedItem="{Binding Category}" 
                  DisplayMemberPath="Name" 
                  SelectedValuePath="Id" SelectedValue="{Binding CategoryId}"
                  HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="120">
        </ComboBox>
        <Button Content="完了" HorizontalAlignment="Left" Margin="619,352,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>


</Window>
